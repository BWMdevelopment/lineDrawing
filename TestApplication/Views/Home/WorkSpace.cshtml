<body style="padding:0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <div ng-app="testApp" ng-controller="interfaceController as intCtrl" ng-init="intCtrl.init()" class="border">
        <div style="height:20%;width:100%">
            <div class="row">
                <div class="col-md-6" style="float: left;"> 
                    <button ng-click="intCtrl.updateSegment()" class="linkButton">Update segment</button>
                </div>
                <div class="col-md-6" style="float: right;color:blue">
                    first point:<span ng-bind="intCtrl.segmentData.CoordinatesList[0].X">X1</span>;<span ng-bind="intCtrl.segmentData.CoordinatesList[0].Y">Y1</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6" style="float: left;">
                    <button ng-click="intCtrl.saveSegment()"  class="linkButton">Save segment</button>
                </div>
                <div class="col-md-6" style="float: right;color:blue">
                    second point:<span ng-bind="intCtrl.segmentData.CoordinatesList[1].X">X1</span>;<span ng-bind="intCtrl.segmentData.CoordinatesList[1].Y">Y1</span>
                </div>
            </div>
        </div>
        <div style="height:80%;width:100%" id="segmewntWorkSpace">
        </div>
    </div>
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <hr id="line" class="segmentLine">
</body>